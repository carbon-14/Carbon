<?xml version="1.0" encoding="utf-8"?>
<program xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation=". program.xsd">
    <description>
        <texture id="colorMap" sampler="LinearSampler" layout="0" default="default_c.png"/>
        <texture id="normalMap" sampler="LinearSampler" layout="1" default="default_n.png"/>
        <parameter id="specParams" layout="0" default="1 1" desc="intensity, shininess"/>
        <parameter id="emissiveColor" layout="1" default="0 0 0 1" desc="rgba"/>
    </description>
    <sets>
        <set id="wall">
            <value ref="specParams">0.25 4</value>
            <value ref="emissiveColor">0 0 0 1</value>
            <phong diffuse="1 1 1 1" specular="25 0.25 0.25 1" ambient="1 1 1 1" emission="0 0 0 1" shininess="6"/>
        </set>
        <set id="sphere">
            <value ref="specParams">1 32</value>
            <value ref="emissiveColor">1 0.5 0.25</value>
            <phong diffuse="1 1 1 1" specular="1 1 1 1" ambient="1 1 1 1" emission="1 0.5 0.25 1" shininess="50" />
        </set>
    </sets>
</program>
